{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/components/*": [ "shared/components/*" ],
      "@/hooks/*": [ "shared/hooks/*" ],
      "@/types/*": [ "shared/types/*" ],
      "@/lib/*": [ "shared/lib/*" ],
      "@/utils": [ "shared/lib/utils" ],
      "@/assets/*": [ "shared/assets/*" ],
      "@/server/*": [ "server/*" ],
      "@/public/*": [ "public/*" ],
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ]
}
